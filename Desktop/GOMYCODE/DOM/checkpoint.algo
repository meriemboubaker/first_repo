ALGORITHM sentence_reader
VAR
    ch :string;
    s,i : integer:=0;
    j : integer:=0;
BEGIN
    ch:= ch.toLower();
    REPEAT
    IF ((ch[i]='a')||(ch[i]='e')||(ch[i]='i')||(ch[i]='y')||(ch[i]='o')||(ch[i]='u'))THEN
    {s=s+1;}
    ELSE IF (ch[i]=' ')
    {j:=j+1;}
    i:=i+1;
    UNTIL (ch[i]='.')
    write (i+1)
    write (s)
    IF (j>0) THEN
    write(j+1)
    ELSE
    write(j)


END

